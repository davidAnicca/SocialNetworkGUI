<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="230.0" prefWidth="230.0" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.socialnetworkgui2.controller.ChatBoxController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <ChoiceBox fx:id="friendsList" prefHeight="26.0" prefWidth="225.0" onAction="#friendChoice" />
        <ListView fx:id="messagesList" />
        <TextArea fx:id="messageText" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="43.0" prefWidth="258.0" promptText="Say something..." onKeyPressed="#typinig"/>
        <Button fx:id="sendMessage" onAction="#onSendMessageButtonClick" text="Send" />
    </children>
</VBox>
